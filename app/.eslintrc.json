{
  "extends": ["next/core-web-vitals", "plugin:import/recommended"],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "parent", ["sibling", "index"]],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "pathGroups": [
          {
            "pattern": "@/**",
            "group": "parent"
          }
        ]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
